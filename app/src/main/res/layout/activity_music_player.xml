<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player_bg"
    tools:context=".MusicPlayer">

    <FrameLayout
        android:id="@+id/albumArtContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/musicPlayerImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/artboard_2"
            android:foreground="@drawable/gradient_overlay"
            app:shapeAppearanceOverlay="@style/roundedCornerShapeAlbumImageMusicPlayer" />



    </FrameLayout>


    <LinearLayout
        android:background="@drawable/gradient_overlay2"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_btn"
            android:src="@drawable/back_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerLyricsToggle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/capsule_for_buttom"
        android:backgroundTint="#702D2D2D"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/playerBtn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_active"
            android:contentDescription="Player View"
            android:padding="0dp"
            android:text="Player"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/lyricsBtn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_inactive"
            android:contentDescription="Lyrics View"
            android:padding="0dp"
            android:text="Lyrics"
            android:textColor="@color/white" />

    </LinearLayout>





    <LinearLayout
        android:id="@+id/songInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintWidth_percent=".7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addToListContainer"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/musicPlayerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/song_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/musicPlayerAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/album_name"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addToListContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-25dp"
        app:layout_constraintTop_toBottomOf="@id/albumArtContainer"
        >
        <ImageButton
            android:id="@+id/fvtPlayerBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/fvt_btn"
            android:src="@drawable/fav_btn_selector"
            app:layout_constraintTop_toBottomOf="@id/albumArtContainer"
            />

        <ImageButton
            android:id="@+id/addToListBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/add_to_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fvtPlayerBtn"
            app:layout_constraintTop_toBottomOf="@id/albumArtContainer"
            app:srcCompat="@drawable/add_to_playlist" />

    </LinearLayout>



    <!-- TIME DISPLAY -->

    <!-- SEEKBAR -->
    <LinearLayout
        android:id="@+id/timeDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/controlButtonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToListContainer">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="20dp">


        <TextView
            android:id="@+id/currentDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/song_duration"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/songDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/song_duration"
            android:textColor="@color/white"
            android:textSize="12sp" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:progressDrawable="@drawable/seek_bar"
            android:thumb="@drawable/seek_thumb" />
    </LinearLayout>



    <!-- CONTROL BUTTONS (Prev, Play/Pause, Next) -->
    <LinearLayout
        android:id="@+id/controlButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageButton
            android:id="@+id/shuffleBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/shuffle_song"
            android:scaleType="centerInside"
            android:src="@drawable/shuffle_btn" />

        <ImageButton
            android:id="@+id/ButtonPrev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/prev_play"
            android:scaleType="centerInside"
            android:src="@drawable/prev_btn" />

        <ImageButton
            android:id="@+id/ButtonPlayPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:background="@android:color/transparent"
            android:contentDescription="@string/pause_play"
            android:scaleType="centerInside"
            android:src="@drawable/pause_btn" />

        <ImageButton
            android:id="@+id/ButtonNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/next_play"
            android:scaleType="centerInside"
            android:src="@drawable/next_btn" />

        <ImageButton
            android:id="@+id/repeatBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/repeat_btn"
            android:scaleType="centerInside"
            android:src="@drawable/repeat_all" />
    </LinearLayout>

<!--    lyrics-->

    <!-- LYRICS CONTAINER -->
    <LinearLayout
        android:id="@+id/lyricsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintBottom_toTopOf="@+id/controlButtonsLayout">

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/lyricsComposeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>